# make floating window fill left-half of screen
# shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1

# fast focus desktop
hyper - x : yabai -m space --focus recent

# send window to desktop and follow focus
hyper - 1 : yabai -m window --space  1; yabai -m space --focus 1
hyper - 2 : yabai -m window --space  2; yabai -m space --focus 2
hyper - 3 : yabai -m window --space  3; yabai -m space --focus 3
hyper - 4 : yabai -m window --space  4; yabai -m space --focus 4
hyper - 5 : yabai -m window --space  5; yabai -m space --focus 5

# send window to monitor and follow focus
fn - n  : yabai -m window --display next; yabai -m display --focus next
fn - p  : yabai -m window --display prev; yabai -m display --focus prev

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
fn - c : yabai -m space --create && \
         index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
         yabai -m window --space "${index}" && \
         yabai -m space --focus "${index}" && \
         yabai -m space --balance

# toggle sticky(+float), topmost, picture-in-picture
hyper - s : yabai -m window --toggle sticky;\
            yabai -m window --toggle topmost;\
            yabai -m window --toggle pip
            # yabai -m window --grid 5:5:4:0:1:1

# focus monitor [ / ]
hyper - p : yabai -m display --focus prev
hyper - n : yabai -m display --focus next

# make floating window fill screen
hyper - m : yabai -m window --grid 1:1:0:0:1:1

# restart yabai
hyper - g : bash -c 'launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"'

# focus window
hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east

# balance the size of windows
hyper - 0: yabai -m space --balance

# float / unfloat window and center on screen
hyper - c : yabai -m window --toggle float;\
            yabai -m window --grid 4:4:1:1:2:2

# move window
hyper - left  : yabai -m window --warp west
hyper - right : yabai -m window --warp east
hyper - up    : yabai -m window --warp north
hyper - down  : yabai -m window --warp south

# toggle window zoom
hyper - d : yabai -m window --toggle zoom-parent
hyper - f : yabai -m window --toggle zoom-fullscreen

# window size
hyper - w : yabai -m window --resize right:20:0
hyper - y : yabai -m window --resize right:-20:0
hyper - u : yabai -m window --resize bottom:0:20
hyper - v : yabai -m window --resize bottom:0:-20

# float/unfloat window
hyper - space : yabai -m window --toggle float

# rotate windows clockwise
hyper - r : yabai -m space --rotate 90
